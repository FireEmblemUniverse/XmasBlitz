#ifndef MODULAR_GETTER_DEFENSE_EVENT
#define MODULAR_GETTER_DEFENSE_EVENT

#include "_Common.event"

pDefenseModifiers: // Defense
	POIN prAddUnitDefense prDebuffDef prAddEquipDefense prRallyDef prPairUpDef prSkillFury
WORD 0

prAddUnitDefense:
	rAdd(rSByteAt(UNIT_DEFENSE))

prAddEquipDefense:
	rAdd(rForUnitEquipped(rCallExternal(prGetItemDefBonus)))

prDebuffDef:
	#incbin "_asm/DebuffDef.bin"
	WORD DebuffTable

prRallyDef:
	#incbin "_asm/RallyDef.bin"
	WORD DebuffTable

prPairUpDef:
  #incbin "_asm/PairUpDef.bin"
  POIN PairUpBonusesTable

prSkillFury:
  rIfUnitHasSkill(FuryID)
    rAddConst(2)

#endif // MODULAR_GETTER_DEFENSE_EVENT
